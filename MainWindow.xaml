<Window x:Class="main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie App" Height="472" Width="626"
        Background="#3C375A">

    <Window.Resources>
        <!-- Recommended View -->
        <DataTemplate x:Key="RecommendedView">
            <StackPanel Margin="20">
                <TextBlock Text="Most watched" Foreground="White" FontSize="16" Margin="10"/>
                <WrapPanel Margin="10">
                    <Border Width="180" Height="120" Background="DeepSkyBlue" CornerRadius="20" Margin="5"/>
                    <Border Width="120" Height="120" Background="Gold" CornerRadius="20" Margin="5"/>
                </WrapPanel>

                <TextBlock Text="Other Products" Foreground="White" FontSize="16" Margin="10"/>
                <WrapPanel Margin="10">
                    <Border Width="100" Height="100" Background="MediumSlateBlue" CornerRadius="20" Margin="5"/>
                    <Border Width="100" Height="100" Background="Orchid" CornerRadius="20" Margin="5"/>
                    <Border Width="100" Height="100" Background="Tomato" CornerRadius="20" Margin="5"/>
                </WrapPanel>
            </StackPanel>
        </DataTemplate>

        <!-- Movies View -->
        <DataTemplate x:Key="MoviesView">
            <UniformGrid Columns="2" Rows="2" Margin="20">
                <StackPanel Margin="10">
                    <Border Width="120" Height="120" Background="#1E1A44" CornerRadius="15"/>
                    <TextBlock Text="movie 1" Foreground="White" HorizontalAlignment="Center" Margin="5"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <Border Width="120" Height="120" Background="#1E1A44" CornerRadius="15"/>
                    <TextBlock Text="movie 2" Foreground="White" HorizontalAlignment="Center" Margin="5"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <Border Width="120" Height="120" Background="#1E1A44" CornerRadius="15"/>
                    <TextBlock Text="movie 3" Foreground="White" HorizontalAlignment="Center" Margin="5"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <Border Width="120" Height="120" Background="#1E1A44" CornerRadius="15"/>
                    <TextBlock Text="movie 4" Foreground="White" HorizontalAlignment="Center" Margin="5"/>
                </StackPanel>
            </UniformGrid>
        </DataTemplate>

        <!-- Account View -->
        <DataTemplate x:Key="AccountView">
            <Grid Background="#443F63">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" Margin="40,40,40,0" VerticalAlignment="Top">
                    <!-- Profile Icon -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Ellipse Width="80" Height="80">
                            <Ellipse.Fill>
                                <VisualBrush>
                                    <VisualBrush.Visual>
                                        <Viewbox>
                                            <TextBlock Text="👤" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Viewbox>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="John Rivals" Foreground="White" FontSize="20" Margin="20,25,0,0"/>
                    </StackPanel>

                    <Button Background="#2A2550" Foreground="White" FontSize="14" Padding="10" Margin="0,0,0,10" BorderThickness="0"
                            HorizontalContentAlignment="Left">
                        Email: RivalsMaster123@gmail.com
                    </Button>

                    <Button Background="#2A2550" Foreground="White" FontSize="14" Padding="10" Margin="0,0,0,10" BorderThickness="0"
                            HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="➕" Margin="0,0,10,0"/>
                            <TextBlock Text="Add another account"/>
                        </StackPanel>
                    </Button>

                    <Button Background="#2A2550" Foreground="White" FontSize="14" Padding="10" Margin="0,0,0,10" BorderThickness="0"
                            HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="↩" Margin="0,0,10,0"/>
                            <TextBlock Text="Sign Out"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <!-- Top Bar -->
        <DockPanel LastChildFill="False" Height="50" VerticalAlignment="Top" Background="#221E40">
            <TextBox Width="200" Height="30" Margin="10" VerticalAlignment="Center"
                     Background="#2C4A5E" Foreground="Black" Text="Search"
                     FontStyle="Italic" />
        </DockPanel>

        <!-- Main Layout -->
        <Grid Margin="0,50,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <StackPanel Grid.Column="0" Background="#2F4960">
                <Button x:Name="RecommendedButton" Content="Recommended" Margin="10" Padding="10"
                        Background="#233649" Foreground="White" BorderThickness="0"
                        Click="Recommended_Click"/>
                <Button x:Name="MoviesButton" Content="Movies" Margin="10" Padding="10"
                        Background="Transparent" Foreground="White" BorderThickness="0"
                        Click="Movies_Click"/>
                <Button x:Name="AccountButton" Content="Account" Margin="10" Padding="10"
                        Background="Transparent" Foreground="White" BorderThickness="0"
                        Click="Account_Click"/>
            </StackPanel>

            <!-- Content Area -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,-10">
                <ContentControl x:Name="MainContent"
                                ContentTemplate="{StaticResource RecommendedView}"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>