<Window x:Class="Movie_System.ReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="Receipt" Height="300" Width="350"
        Background="#2E2B4F" WindowStartupLocation="CenterScreen">
    
    <StackPanel Margin="20">
        
        <TextBlock x:Name="ReceiptTitle" Text="Your Receipt"
                   FontSize="24" Foreground="White" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock x:Name="SelectedSeatsText"
                   Text="Seats: A1, A2"
                   Foreground="White" FontSize="16" Margin="0,5"/>

        <TextBlock x:Name="SeatCountText"
                   Text="Total Seats: 2"
                   Foreground="White" FontSize="16" Margin="0,5"/>

        <TextBlock x:Name="TotalAmountText"
                   Text="Total Amount: PHP 400"
                   Foreground="White" FontSize="16" Margin="0,5"/>

        <Button Content="Close" Margin="0,20,0,0" Height="30"
                Click="Close_Click"
                Background="DarkSlateBlue" Foreground="White"/>
    </StackPanel>
</Window>
