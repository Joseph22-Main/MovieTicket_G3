<Window x:Class="Pre_Order_Menu.ReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snack Receipt" Height="350" Width="400"
        Background="#2E2B4F" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">

        <TextBlock Text="Snack Receipt"
                   FontSize="24" Foreground="White" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <ListBox x:Name="ReceiptListBox"
                 Foreground="White" Background="Transparent"
                 BorderBrush="White" FontSize="16" Height="180" />

        <TextBlock x:Name="TotalTextBlock"
                   FontSize="18" FontWeight="Bold"
                   Foreground="White" Margin="0,10,0,10"
                   HorizontalAlignment="Right"/>

        <Button Content="Close" Height="35" Width="100"
                HorizontalAlignment="Center"
                Background="DarkSlateBlue" Foreground="White"
                Click="Close_Click"/>
    </StackPanel>
</Window>
