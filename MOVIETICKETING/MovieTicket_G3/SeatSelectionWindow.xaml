<Window x:Class="Movie_System.SeatSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Seats" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="SeatButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="10">
        <Button Content="Confirm Selection" 
                DockPanel.Dock="Bottom" 
                Height="40" 
                Click="ConfirmButton_Click"/>

        <UniformGrid Name="SeatGrid" Rows="5" Columns="5"/>
    </DockPanel>
</Window>
