<Window x:Class="MOVIETICKETING.SnackReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snack Receipt" Height="300" Width="350">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Receipt" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="ReceiptText" FontSize="14" Margin="0,0,0,10" TextWrapping="Wrap"/>
            <TextBlock x:Name="TotalText" FontSize="16" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
