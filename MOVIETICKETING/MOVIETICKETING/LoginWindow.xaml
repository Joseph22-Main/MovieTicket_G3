<Window x:Class="MOVIETICKETING.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="300"
        xmlns:local="clr-namespace:MOVIETICKETING">
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Welcome to MOVIETICKETING!"
                       FontSize="16" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

            <Grid Margin="0,0,0,10">
                <TextBox x:Name="EmailTextBox"
                         TextChanged="EmailTextBox_TextChanged"
                         Padding="5"/>
                <TextBlock IsHitTestVisible="False"
                           Text="Enter your email"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="5,0,0,0"
                           Foreground="Gray"
                           Visibility="{Binding ElementName=EmailTextBox, Path=Text.IsEmpty, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>

            <Grid Margin="0,0,0,20">
                <PasswordBox x:Name="PasswordBox"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Padding="5"/>
                <TextBlock IsHitTestVisible="False"
                           Text="Enter your password"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="5,0,0,0"
                           Foreground="Gray"
                           x:Name="PasswordPlaceholder"/>
            </Grid>

            <Button Content="Let's Binge!"
                    Click="LetsBingeButton_Click"
                    Background="#FF222222" Foreground="White" Padding="10,5" Margin="0,0,0,10"/>

            
            <Button Content="Admin Login"
                    Click="AdminLoginButton_Click"
                    Background="#FF4CAF50" Foreground="White" Padding="10,5"/>

            <TextBlock x:Name="ErrorText"
                       Foreground="Red"
                       Margin="0,10,0,0"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
