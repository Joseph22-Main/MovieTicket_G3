<Window x:Class="MOVIETICKETING.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="300">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Welcome to MOVIETICKETING!" FontSize="16" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

            <TextBox x:Name="EmailTextBox"
                     PlaceholderText="Enter your email"
                     TextChanged="EmailTextBox_TextChanged"
                     Margin="0,0,0,10"/>

            <PasswordBox x:Name="PasswordBox"
                         PlaceholderText="Enter your password"
                         PasswordChanged="PasswordBox_PasswordChanged"
                         Margin="0,0,0,20"/>

            <Button Content="Let's Binge!"
                    Click="LetsBingeButton_Click"
                    Background="#FF222222" Foreground="White" Padding="10,5"/>

            <TextBlock x:Name="ErrorText"
                       Foreground="Red"
                       Margin="0,10,0,0"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
