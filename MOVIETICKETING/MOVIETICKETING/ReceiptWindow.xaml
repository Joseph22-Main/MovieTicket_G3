<Window x:Class="MOVIETICKETING.ReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Receipt" Height="250" Width="350">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="TitleText" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="SeatsText" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock x:Name="TotalText" FontSize="16" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
