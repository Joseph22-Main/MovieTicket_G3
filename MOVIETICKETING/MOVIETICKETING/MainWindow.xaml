<Window x:Class="MOVIETICKETING.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie Ticketing System" Height="720" Width="1080"
        Background="#F2E8CF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Background="#A7C957" Grid.Row="0" Margin="0">
            <TextBox x:Name="SearchBox" Width="200" Margin="10" VerticalAlignment="Center"/>
            <Border CornerRadius="16" BorderBrush="White" BorderThickness="2" Margin="10" VerticalAlignment="Center">
                <Button Content="Search"
                        Click="Search_Click"
                        Padding="10,4"
                        FontWeight="Bold"
                        Background="#6A994E"
                        Foreground="#F2E8CF"
                        BorderThickness="0"/>
            </Border>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Background="#A7C957" VerticalAlignment="Top">
                <Border CornerRadius="16" BorderBrush="White" BorderThickness="2" Margin="10,10,10,5">
                    <Button x:Name="RecommendedButton" Content="Recommended"
                            Click="Recommended_Click"
                            Padding="5"
                            Background="Transparent" Foreground="Black"
                            BorderThickness="0"/>
                </Border>
                <Border CornerRadius="16" BorderBrush="White" BorderThickness="2" Margin="10,5">
                    <Button x:Name="MoviesButton" Content="Movies"
                            Click="Movies_Click"
                            Padding="5"
                            Background="Transparent" Foreground="Black"
                            BorderThickness="0"/>
                </Border>
                <Border CornerRadius="16" BorderBrush="White" BorderThickness="2" Margin="10,5">
                    <Button x:Name="AccountButton" Content="Account"
                            Click="Account_Click"
                            Padding="5"
                            Background="Transparent" Foreground="Black"
                            BorderThickness="0"/>
                </Border>

                <Border CornerRadius="16" BorderBrush="White" BorderThickness="2" Margin="10,20,10,5">
                    <Button Content="Logout"
                            Click="Logout_Click"
                            Padding="5"
                            Background="#D9534F" Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"/>
                </Border>
            </StackPanel>

            <ScrollViewer Grid.Column="1">
                <StackPanel x:Name="MainContent" Margin="10"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>