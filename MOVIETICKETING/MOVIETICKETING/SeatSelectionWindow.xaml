<Window x:Class="MOVIETICKETING.SeatSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seat Selection" Height="550" Width="700"
        Background="#F2E8CF" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="MovieTitle" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Text="SCREEN" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Background="Gray" Foreground="White" Padding="100,5" Margin="0,10"/>

        <ItemsControl Grid.Row="2" x:Name="SeatGrid" Margin="0,10">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding SeatNumber}" Click="Seat_Click" Margin="2"
                            IsEnabled="{Binding IsEnabled}" Background="{Binding BackgroundColor}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button Grid.Row="3" Content="Confirm Selection" Click="Confirm_Click" Margin="0,10" HorizontalAlignment="Center" Padding="10,5"/>
    </Grid>
</Window>
