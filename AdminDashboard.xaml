<Window x:Class="MovieTicket_G3.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="600" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="600"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Menu -->
        <StackPanel Background="#2D2D30" Orientation="Vertical" Grid.Column="0">
            <TextBlock Text="Admin Menu" Foreground="White" FontSize="18" Margin="10" />
            <Button Content="Movie Update" Name="btnMovieUpdate" Margin="10" Click="btnMovieUpdate_Click"/>
            <Button Content="Snack Inventory" Name="btnSnackInventory" Margin="10" Click="btnSnackInventory_Click"/>
            <Button Content="Booking Menu" Name="btnBookingMenu" Margin="10" Click="btnBookingMenu_Click"/>
        </StackPanel>

        <!-- Content Area -->
        <!--Movie Update Section -->
        <Grid Grid.Column="1" Margin="160,100,0,150">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <!-- Add/Edit/Delete Buttons -->
            <Button Name="AddButton" Visibility="Collapsed" Content="Add Movie" FontSize="40" Grid.Row="0" Click="Add_Click"/>
            <Button Name="DelButton" Visibility="Collapsed" Content="Delete Movie" FontSize="40" Grid.Row="2" Click="Del_Click"/>
            <Button Name="EditButton" Visibility="Collapsed" Content="Edit Movie" FontSize="40" Grid.Row="4" Click="Edit_Click"/>
        </Grid>
        <!--Snack Inventory Section -->
        <Grid Grid.Column="1" Margin="160,100,0,150">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
        <!-- Add/Edit/Delete SnacksButtons -->
            <Button Name="AddSnack" Visibility="Collapsed" Content="Add Snack" FontSize="40" Grid.Row="0" Click="AddSnack_Click"/>
            <Button Name="DelSnack" Visibility="Collapsed" Content="Delete Snack" FontSize="40" Grid.Row="2" Click="DelSnack_Click"/>
            <Button Name="EditSnack" Visibility="Collapsed" Content="Edit Snack" FontSize="40" Grid.Row="4" Click="EditSnack_Click"/>
        <!-- Booking Menu Section -->
            <Grid Grid.Column="1" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Button Name="Movie1" Visibility="Collapsed" Content="Add Snack" FontSize="40" Grid.Row="0" Click="Movie1_Click"/>
                <Button Name="Movie2" Visibility="Collapsed" Content="Delete Snack" FontSize="40" Grid.Row="2" Click="Movie2_Click"/>
                <Button Name="Movie3" Visibility="Collapsed" Content="Edit Snack" FontSize="40" Grid.Row="4" Click="Movie3_Click"/>
                <Button Name="Movie4" Visibility="Collapsed" Content="Edit Snack" FontSize="40" Grid.Row="6" Click="Movie4_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>